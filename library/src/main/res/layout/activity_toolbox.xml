<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a2a2a"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#666666">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="ToolBox"
            android:textColor="#ffffff" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页面信息"
                    android:textColor="#e8b25a"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="页面名称"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvPageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="测试文本" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Intent信息"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvPageIntent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    tools:text="Intent信息" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="调用者"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvCaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="无"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用信息"
                    android:textColor="#e8b25a"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="包名"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvPkgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="包名" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="版本"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="版本" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="应用签名"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="md5值"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.CopyText
                    android:id="@+id/tvSignMd5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="md5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="SHA1值"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvSignSha1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="SHA1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="SHA256值"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.CopyText
                    android:id="@+id/tvSignSha256"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="SHA256"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进程信息"
                    android:textColor="#e8b25a"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="进程名称"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvProcId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进程ID"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="内存使用(Java)"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.CopyText
                    android:id="@+id/tvProcMemory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="内存使用情况" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备信息"

                    android:textColor="#e8b25a"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Android 版本"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvOSversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android 版本"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="设备型号"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备型号"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="屏幕可用分辨率"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.CopyText
                    android:id="@+id/tvResolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="屏幕分辨率"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="屏幕密度"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.CopyText
                    android:id="@+id/tvDensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="屏幕密度"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>