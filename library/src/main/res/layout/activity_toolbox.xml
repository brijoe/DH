<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2a2a2a"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_666666">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/tool_box"
            android:textStyle="bold"
            android:textColor="#ffffff" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/page_info"
                    android:textColor="@color/color_e8b25a"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/page_name"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvPageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    tools:text="@string/not_have" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/intent_info"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvPageIntent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Intent data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/caller_name"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvCaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/not_have"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_info"
                    android:textColor="@color/color_e8b25a"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/package_name"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvPkgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    tools:text="@string/not_have" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/package_version"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    tools:text="@string/package_version" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/app_signature"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/md5_value"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvSignMd5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    tools:text="md5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/sha1_value"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvSignSha1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    tools:text="SHA1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/sha256_value"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvSignSha256"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="SHA256"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/process_info"
                    android:textColor="@color/color_e8b25a"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/process_name"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvProcId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/process_name"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/memory_used"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvProcMemory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp"
                    tools:text="@string/memory_used" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_info"

                    android:textColor="@color/color_e8b25a"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/os_version"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvOSversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/os_version"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/model_name"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/model_name"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/screen_resolution_available"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvResolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="screen_resolution_available"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/screen_density"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />


                <io.github.brijoe.ui.view.CopyText
                    android:id="@+id/tvDensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_density"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>